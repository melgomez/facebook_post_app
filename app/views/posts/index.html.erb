<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<% if session[:user_id] %>
	<h2>Logged as <%= User.find(session[:user_id]).name %></h2>
<% end %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Published</th>
      <th>Publish date</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.status %></td>
        <td><%= post.published %></td>
        <td><%= post.publish_date %></td>
        <td><%= User.find(post.user_id).name %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>, <%= link_to 'Import Posts', new_import_post_path %>
